<?xml version="1.0" encoding="utf-8"?>
<com.oldhigh.intimenotes.util.BackRelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    >

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        >


        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">

            <View
                android:id="@+id/view_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_action_setting"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="及时笔记"
                android:textColor="@color/tool_bar_color"
                android:textSize="@dimen/text_18sp"

                />

            <View
                android:id="@+id/view_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_close" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <EditText
                android:id="@+id/edit_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"

                android:layout_below="@id/ll_title"
                android:background="@null"
                android:hint="输入内容"
                android:textColorHint="@color/tool_seconds"
                android:textColor="@color/tool_bar_color"
                android:maxLines="3"
                android:paddingStart="5dp"
                />


            <TextView
                android:id="@+id/text_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="搜索"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/tool_bar_color"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/text_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="添加"

                android:textColor="@color/tool_bar_color"
                android:textSize="@dimen/text_16sp"

                />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"


        />

</com.oldhigh.intimenotes.util.BackRelativeLayout>